package decisao;

import java.util.Arrays;

import javax.swing.JOptionPane;

public class Exercicio3 {
	public static void main(String[] args) {
		short n1 = Short.parseShort(JOptionPane.showInputDialog("Digite o primeiro numero"));
		short n2 = Short.parseShort(JOptionPane.showInputDialog("Digite o terceiro numero"));
		short n3 = Short.parseShort(JOptionPane.showInputDialog("Digite o terceiro numero"));
		int [] vet = {n1 ,
				n2 ,
				n3
		};
				
		
		
		System.out.println("Ordem decrescente: " + Arrays.sort(vet));
		
		
		
		
	}

}
